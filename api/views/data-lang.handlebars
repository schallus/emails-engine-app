#
# brand: {{data.brand}}
# campaign: {{data.campaign}}
# lang: {{data.lang}}
#

{{#each data.dataLang}}
    {{#each this.languages}}
        {{#ifEquals ../../data.lang this.lang}}
{{{../this.blockName}}}:
            {{#each this.properties}}
                {{#each this.value}}
                    {{#if @first}}
    {{{../this.name}}}:
                    {{/if}}
                    {{#each this}}
                        {{#if @first}}
                            {{#if this.copiedFromMaster }}
                                {{#ifEquals ../../../../../data.lang ../../../../../data.masterLang}}
      - {{{this.name}}}: "{{{escape this.value}}}"
                                {{else}}
      - {{{this.name}}}: "{{{escape (masterValue ../../../../this.blockName ../../../../../data.masterLang this.name ../../this.name @../key)}}}"
                                {{/ifEquals}}
                            {{else}}
      - {{{this.name}}}: "{{{escape this.value}}}"
                            {{/if}}
                        {{else}}
                            {{#if this.copiedFromMaster }}
                                {{#ifEquals ../../../../../data.lang ../../../../../data.masterLang}}
        {{{this.name}}}: "{{{escape this.value}}}"
                                {{else}}
        {{{this.name}}}: "{{{escape (masterValue ../../../../this.blockName ../../../../../data.masterLang this.name ../../this.name @../key)}}}"
                                {{/ifEquals}}
                            {{else}}
        {{{this.name}}}: "{{{escape this.value}}}"
                            {{/if}}
                        {{/if}}
                    {{/each}}
                {{else}}
                    {{#if this.copiedFromMaster }}
                        {{#ifEquals ../../../data.lang ../../../data.masterLang}}
    {{{this.name}}}: "{{{escape this.value}}}"
                        {{else}}
    {{{this.name}}}: "{{{escape (masterValue ../../this.blockName ../../../data.masterLang this.name null null)}}}"
                        {{/ifEquals}}
                    {{else}}
    {{{this.name}}}: "{{{escape this.value}}}"
                    {{/if}}
                {{/each}}
            {{/each}}
        {{/ifEquals}}
    {{/each}}
{{/each}}